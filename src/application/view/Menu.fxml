<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	minHeight="850.0" prefHeight="850.0" minWidth="600.0" prefWidth="600.0" fx:controller="application.controller.MenuController">
	<children>
		<ImageView fitHeight="850.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="file:backgroundPics/background-menu.jpg" />
			</image>
		</ImageView>
		<VBox layoutX="65" layoutY="125.0" alignment="CENTER"
			minHeight="335.0" prefHeight="335.0" minWidth="470.0" prefWidth="470.0">
			<GridPane fx:id="resultPane" vgap="10.0" hgap="10.0"
				minHeight="320.0" prefHeight="320.0" minWidth="470.0" prefWidth="470.0" />
			<Pagination fx:id="resultPagination" styleClass="menu-pagination" />
		</VBox>
		<Button text="Search" layoutX="65.0" layoutY="750.0" styleClass="menu-button"
			minHeight="40.0" prefHeight="40.0" minWidth="80.0" prefWidth="80.0" onAction="#handleSearch" />
		<Button text="Recipe" layoutX="385.0" layoutY="750.0" styleClass="menu-button"
			minHeight="40.0" prefHeight="40.0" minWidth="80.0" prefWidth="80.0" onAction="#handleRecipe" />
	</children>
	
	<stylesheets>
    	<URL value="file:stylesheets/menu.css" />
	</stylesheets>
</AnchorPane>
