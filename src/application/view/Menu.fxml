<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="850.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.MenuController">
	<children>
		<ImageView fitHeight="850.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="file:backgroundPics/background-menu.jpg" />
			</image>
		</ImageView>
		<VBox layoutX="65" layoutY="125.0" minHeight="335.0" prefHeight="335.0" alignment="CENTER">
			<GridPane fx:id="resultPane" vgap="10.0" hgap="10.0" minHeight="320.0" prefHeight="320.0" />
			<Pagination fx:id="resultPagination" />
		</VBox>
		<Button layoutX="65.0" layoutY="750.0" styleClass="normal-button" onAction="#handleSearch" text="Search" />
		<Button layoutX="380.0" layoutY="750.0" styleClass="normal-button" onAction="#handleRecipe" text="Recipe" />
	</children>
	
	<stylesheets>
    	<URL value="file:stylesheets/menu.css" />
	</stylesheets>
</AnchorPane>
