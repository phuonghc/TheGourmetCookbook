<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="800.0" minWidth="800.0" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.MenuController">
	<children>
		<ImageView fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="file:backgroundPics/background-menu.jpg" />
			</image>
		</ImageView>
		<VBox alignment="CENTER" layoutX="290.0" layoutY="60.0" minHeight="335.0" minWidth="500.0" prefHeight="335.0" prefWidth="500.0">
   			<children>
   				<GridPane fx:id="resultPane" hgap="10.0" minHeight="320.0" minWidth="500.0" prefHeight="320.0" prefWidth="500.0" vgap="10.0" />
   				<Pagination fx:id="resultPagination" styleClass="menu-pagination" />
   			</children>
		</VBox>
		<Button layoutX="375.0" layoutY="650.0" mnemonicParsing="false" minHeight="40.0" minWidth="80.0" onAction="#handleSearch" prefHeight="40.0" prefWidth="80.0" styleClass="menu-button" text="Search" />
		<Button layoutX="650.0" layoutY="650.0" mnemonicParsing="false" minHeight="40.0" minWidth="80.0" onAction="#handleRecipe" prefHeight="40.0" prefWidth="80.0" styleClass="menu-button" text="Recipe" />
		<Button layoutX="710.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleHome" minHeight="40.0" minWidth="80.0" prefHeight="40.0" prefWidth="80.0" styleClass="menu-button" text="Home" />
	</children>
	
	<stylesheets>
    	<URL value="file:stylesheets/menu.css" />
	</stylesheets>
</AnchorPane>
