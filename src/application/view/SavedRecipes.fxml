<AnchorPane minHeight="800.0" minWidth="800.0" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.SavedRecipesController">
	<children>
		<ImageView fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="file:backgroundPics/background-menu.jpg" />
			</image>
		</ImageView>
		<VBox alignment="CENTER" layoutX="290.0" layoutY="60.0" minHeight="335.0" minWidth="500.0" prefHeight="335.0" prefWidth="500.0">
   <children>
   			<GridPane fx:id="resultPane" hgap="10.0" minHeight="320.0" minWidth="500.0" prefHeight="320.0" prefWidth="500.0" vgap="10.0" />
   			<Pagination fx:id="resultPagination" styleClass="menu-pagination" />
   </children>
		</VBox>
		<Button layoutX="650.0" layoutY="650.0" minHeight="40.0" minWidth="80.0" onAction="#handleRecipe" prefHeight="40.0" prefWidth="80.0" styleClass="menu-button" text="Recipe" />
      <Button fx:id="homeButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#handle" prefHeight="34.0" prefWidth="80.0" styleClass="menu-button" text="Home">
         <font>
            <Font size="12.0" />
         </font>
      </Button>
	</children>
	
	<stylesheets>
    	<URL value="file:stylesheets/menu.css" />
	</stylesheets>
